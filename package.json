{
  "name": "chat-server",
  "version": "1.0.0",
  "description": "Local network chat server",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node src/index.js",
    "build": "node build.js",
    "pkg": "pkg . --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --output dist/chat-server",
    "pkg:win": "pkg . --target node18-win-x64 --output dist/chat-server-win.exe",
    "pkg:linux": "pkg . --target node18-linux-x64 --output dist/chat-server-linux",
    "pkg:mac": "pkg . --target node18-macos-x64 --output dist/chat-server-macos"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "public/**/*",
      "src/**/*"
    ],
    "output": "dist/chat-server"
  },
  "bin": "src/index.js"
}